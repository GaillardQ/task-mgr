{% extends 'FrontEndFrontOfficeBundle::FrontOffice.html.twig' %}

{% block title %}Task Manager{% endblock %}

{% block content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 margin-top-10vh">
                    <img id="home-logo" src="{{ asset('images/home-logo.png') }}" alt="home-logo" class="img-circle">
                    <div class="align-center">
                        <span id="home-text" class="hidden-xs">TASK MANAGER</span>
                        <span id="home-text" class="visible-xs">TASK MGR</span>
                    </div>
                    
                    {% if error != null %}
                        <div role="alert" class="alert alert-danger col-lg-2 col-md-4 col-sm-6 col-lg-offset-5 col-md-offset-4 col-sm-offset-3">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    
                    <form action="{{ path('login_check', {}) }}" method="POST" class="col-lg-2 col-md-4 col-sm-6 col-lg-offset-5 col-md-offset-4 col-sm-offset-3">
                        <div class="form-group"></label>
                            <input id="login-name" class="form-control" type="text" required="required" name="_username" placeholder="Login" value="{{ last_username }}">
                        </div>
                        <div class="form-group"></label>
                            <input id="login-pwd" class="form-control" type="password" required="required" name="_password" placeholder="">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                        <div class="align-center margin-bottom-20">
                            <input type="submit" value="Se connecter" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
